{
  "manifest_version": 2,
  "name": "PixelProwler",
  "version": "1.0",
  "description": "Easily perform a reverse image search within the context menu as a Chrome extension.",
  "permissions": ["contextMenus", "activeTab"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "PixelProwler",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
